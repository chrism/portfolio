<header id="page-header" class="projects">
	<h1 class="main-heading"><%= link_to 'Recent Projects'.html_safe, projects_path, :id => "project-title" %> / <%= @project.title %></h1>
</header>
<article id="project" class="clearfix">
	<div class="<%= @project.projectformat %> images">
		<% if @project.projectimages %>		
			<ul>
				<% @project.projectimages.each do |projectimage| %>
			    <li><%= image_tag("projectimages/" + projectimage.url) %></li>
				<% end %>
			</ul>
		<% end %>
	</div>
	<div class="details">
	  <%= @project.description.html_safe %>
		<% if @project.categories %>		
			<ul>
				<% @project.categories.each do |category| %>
			    <li><%= category.name %></li>
				<% end %>
			</ul>
		<% end %>
	</div>
	<footer>
		<%= link_to '&larr; Back to projects'.html_safe, projects_path, :class => "view-project" %>
		<% if can? :update, Project %>
			<%= link_to 'Edit', edit_project_path(@project) %> |
		<% end %>
	</footer>	
</article>

